<div id="art">
  <div id="image-posts">
    {{#each displayedArts key="@index" as |art|}}
      <image-thumbnail
        @art={{art}}
        @onclick={{action navigateTo}}
        @selected={{is-equal currentArt art}}
      />
    {{/each}}
  </div>

  {{#if currentArt}}
    <image-post
      @art={{currentArt}}
      @onclose={{action navigateHome}}
    />
  {{/if}}
</div>
